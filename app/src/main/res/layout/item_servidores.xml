<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorAccent"
    >

    <LinearLayout
        android:id="@+id/llServidor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="82dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/ivStarUno"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="1dp"
                    android:src="@drawable/ic_stat_name" />

                <ImageView
                    android:id="@+id/ivStarDos"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="1dp"
                    android:src="@drawable/ic_stat_name" />


                <ImageView
                    android:id="@+id/ivStarTres"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="1dp"
                    android:src="@drawable/ic_stat_name" />

                <ImageView
                    android:id="@+id/ivStarCuatro"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="1dp"
                    android:src="@drawable/ic_stat_name" />


                <ImageView
                    android:id="@+id/ivStarCinco"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="1dp"
                    android:src="@drawable/ic_stat_name" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="NOMBRE" />

                <TextView
                    android:id="@+id/tvDistancia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="DISTANCIA"
                    android:textStyle="bold" />

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tvEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEdad"
                    android:text="EDAD" />

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tvTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEdad"
                    android:text="TELEFONO" />

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tvExperiencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEdad"
                    android:text="EXPERIENCIA" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>